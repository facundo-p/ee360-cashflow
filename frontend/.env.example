# ==================================
# Frontend Environment Variables
# ==================================
# Copy this file to .env.local and adjust values as needed
# Variables must be prefixed with NEXT_PUBLIC_ to be exposed to the browser

# API URL - Backend endpoint
NEXT_PUBLIC_API_URL=http://localhost:4000/api

# Mock API Mode
# Set to 'true' to use mock data instead of real backend
# Useful for development without running the backend
NEXT_PUBLIC_USE_MOCK_API=false
