# ==================================
# Backend Environment Variables
# ==================================
# Copy this file to .env and adjust values as needed

# Server
PORT=4000
HOST=0.0.0.0
LOG_LEVEL=info

# CORS - Frontend origin allowed
CORS_ORIGIN=http://localhost:3000

# Database
# Path to SQLite database file (relative to backend folder)
DATABASE_PATH=./persistence/data.db

# Authentication
# IMPORTANT: Change this in production!
JWT_SECRET=ee360-dev-secret-change-in-production

# Environment
# Set to 'production' in production deployments
NODE_ENV=development

# Mock Authentication (development only)
# Set to 'false' to require real JWT tokens even in development
# Only works when NODE_ENV != 'production'
MOCK_AUTH=true
